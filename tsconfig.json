{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist/",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*.ts"]
}
